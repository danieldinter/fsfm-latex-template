\newcommand{\makecoverpage}{%
	\begingroup%
		\thispagestyle{empty}%
		%
		\noindent%
		\raggedright%
		%
		\center{\sffamily%
			\Large{\FS@thesis@type}\par%
			\vspace*{5cm}%
			\@title\par
			\vspace*{5cm}%
			\@author\par
		}%
	\endgroup
	\clearpage
}

\newcommand{\maketitlepage}{%
	\newlength{\@FS@tmp@baselineskip}%
	\setlength{\@FS@tmp@baselineskip}{\the\baselineskip}%
	\setlength{\baselineskip}{0.0pt}%
	\begingroup%
		\parskip=8pt%
		\thispagestyle{empty}%
		%
		\noindent%
		\raggedright%
		%
		\center{\sffamily%
			{\textbf \@title}\par%
			\vspace*{2cm}%
			\FS@thesis@type\par%
			at Frankfurt School of Finance \& Management\par%
			\vspace*{3cm}%
			Supervised by\par%
			\FS@thesis@firstsupervisor\par%
			\FS@thesis@secondsupervisor\par%
			\vspace*{3cm}%
			Submitted by\par%	
			\@author\par%
			\FS@thesis@masterprogramme\par%
			\FS@thesis@matriculationnumber\par%
			\FS@thesis@address\par%
			\FS@thesis@telephone\par%
			\FS@thesis@email\par%
			\vspace*{2cm}%
			\FS@thesis@date\par%
		}%
	\setcounter{page}{-1}%
	\thispagestyle{empty}%
	\clearpage
	\endgroup
	\setlength{\baselineskip}{\@FS@tmp@baselineskip}%
	%
	\global\let\@FS@tmp@baselineskip\relax
	\global\let\@FS@tmp@baselineskip\@undefined
	%
	\@ifundefined{chapter}{\clearpage}{}
}	